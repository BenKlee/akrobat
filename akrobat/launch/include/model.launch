<launch>
  <arg name="param_name" default="robot_description"/>
  <arg name="high_poly" default="false"/>
  
  <!-- Load the URDF into the ROS Parameter Server -->
  <param if="$(arg high_poly)" name="$(arg param_name)"
    command="$(find xacro)/xacro '$(find akrobat)/urdf/akrobat_high_poly.xacro'"/>

  <param unless="$(arg high_poly)" name="$(arg param_name)"
    command="$(find xacro)/xacro '$(find akrobat)/urdf/akrobat_low_poly.xacro'"/>

</launch>