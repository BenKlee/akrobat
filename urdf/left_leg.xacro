<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro">
    <xacro:macro name="left_leg" params="leg_number">
        <link name="${leg_number}_coxa_link">
            <visual>
                <geometry>
                    <mesh filename="${stl_path_visual}coxa_r_link.stl"/>
                </geometry>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <material name="grey">
                    <color rgba="${color_grey}"/>
                </material>
            </visual>
            <inertial>
                <mass value="0.2"/>
                <inertia ixx="4.99231E-05" ixy="7.69231E-08" ixz="0" iyy="4.83846E-05" iyz="0" izz="4.83846E-05"/>
            </inertial>
            <collision>
                <geometry>
                    <mesh filename="${stl_path_collision}coxa_r_link.stl"/>
                </geometry>
                <origin rpy="0 0 0" xyz="0 0 0"/>
            </collision>
        </link>
        <joint name="m${leg_number}1" type="revolute">
            <parent link="akrobat_link"/>
            <child link="${leg_number}_coxa_link"/>
            <origin xyz="0.051 ${(leg_number-4)/2*-0.217} 0.0" rpy="0 0 ${pi-(leg_number-4)/2*pi*0.1111}" />
            <axis xyz="0 0 1"/>
            <limit effort="1000.0" lower="-3.14" upper="3.14" velocity="0.5"/>
        </joint>
        <link name="${leg_number}_femur_link">
            <visual>
                <geometry>
                    <mesh filename="${stl_path_visual}femur_link.stl"/>
                </geometry>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <material name="grey">
                    <color rgba="${color_grey}"/>
                </material>
            </visual>
            <inertial>
                <mass value="0.2"/>
                <inertia ixx="2.40946E-05" ixy="-1.00676E-06" ixz="-7.43243E-07" iyy="0.000142824" iyz="-6.75676E-09" izz="0.000150466"/>
            </inertial>
            <collision>
                <geometry>
                    <mesh filename="${stl_path_collision}femur_link.stl"/>
                </geometry>
                <origin rpy="0 0 0" xyz="0 0 0"/>
            </collision>
        </link>
        <joint name="m${leg_number}2" type="revolute">
            <parent link="${leg_number}_coxa_link"/>
            <child link="${leg_number}_femur_link"/>
            <origin xyz="-0.07 0.0 0.0" rpy="0 3.14 0"/>
            <axis xyz="0 1 0"/>
            <limit effort="1000.0" lower="-3.14" upper="3.14" velocity="0.5"/>
        </joint>
        <link name="${leg_number}_tibia_link">
            <visual>
                <geometry>
                    <mesh filename="${stl_path_visual}tibia_link.stl"/>
                </geometry>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <material name="grey">
                    <color rgba="${color_grey}"/>
                </material>
            </visual>
            <inertial>
                <mass value="0.2"/>
                <inertia ixx="0.000296304" ixy="-4.34783E-08" ixz="3.26087E-06" iyy="0.000265391" iyz="1.73913E-06" izz="4.22174E-05"/>
            </inertial>
            <collision>
                <geometry>
                    <mesh filename="${stl_path_collision}tibia_link.stl"/>
                </geometry>
                <origin rpy="0 0 0" xyz="0 0 0"/>
            </collision>
        </link>


        <joint name="m${leg_number}3" type="revolute">
            <parent link="${leg_number}_femur_link"/>
            <child link="${leg_number}_tibia_link"/>
            <origin xyz="0.096 0.0 0.0" rpy="0 -1.57 0"/>
            <axis xyz="0 1 0"/>
            <limit effort="1000.0" lower="-3.14" upper="3.14" velocity="0.5"/>
        </joint>
        <link name="${leg_number}_foot_link" />
        <joint name="${leg_number}_foot_joint" type="fixed">
            <parent link="${leg_number}_tibia_link" />
            <child link="${leg_number}_foot_link" />
            <origin xyz="0 0.0 -0.162" rpy="0.0 0.0 0.0" />
        </joint>

    </xacro:macro>
</robot>