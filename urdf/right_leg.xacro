<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro">
	<xacro:macro name="right_leg" params="leg_number">
		<link name="${leg_number}_coxa_link">
			<visual>
				<geometry>
					<mesh filename="${stl_path_visual}coxa_l_link.stl"/>
				</geometry>
				<origin rpy="0 0 0" xyz="0 0 0"/>
				<material name="grey">
					<color rgba="${color_grey}"/>
				</material>
			</visual>
			<inertial>
				<mass value="0.2"/>
				<inertia ixx="82.2065037312" ixy="-2.43e-14" ixz="1.63e-14" iyy="85.2328513536" iyz="-1e-16" izz="85.9001389056" />
			</inertial>
			<collision>
				<geometry>
					<mesh filename="${stl_path_collision}coxa_l_link.stl"/>
				</geometry>
				<origin rpy="0 0 0" xyz="0 0 0"/>
			</collision>
		</link>
		<joint name="m${leg_number}1" type="revolute">
			<parent link="akrobat_link"/>
			<child link="${leg_number}_coxa_link"/>
			<origin xyz="-0.051 ${(leg_number-3)/2*-0.217} 0.0" rpy="0 0 ${pi-(leg_number-3)/2*pi*-0.1111}"/>
			<axis xyz="0 0 1"/>
			<limit effort="1000.0" lower="-3.14" upper="3.14" velocity="0.5"/>
		</joint>
		<link name="${leg_number}_femur_link">
			<visual>
				<geometry>
					<mesh filename="${stl_path_visual}femur_link.stl"/>
				</geometry>
				<origin rpy="0 0 0" xyz="0 0 0"/>
				<material name="grey">
					<color rgba="${color_grey}"/>
				</material>
			</visual>
			<inertial>
				<mass value="0.2"/>
				<inertia ixx="373.4843424768" ixy="-4.3218346e-09" ixz="-7.8324625e-05" iyy="2144.3060432896" iyz="-2.053010498e-07" izz="2269.8960879616" />
			</inertial>
			<collision>
				<geometry>
					<mesh filename="${stl_path_collision}femur_link.stl"/>
				</geometry>
				<origin rpy="0 0 0" xyz="0 0 0"/>
			</collision>
		</link>
		<joint name="m${leg_number}2" type="revolute">
			<parent link="${leg_number}_coxa_link"/>
			<child link="${leg_number}_femur_link"/>
			<origin xyz="0.07 0.0 0.0" rpy="3.14 0 0"/>
			<axis xyz="0 1 0"/>
			<limit effort="1000.0" lower="-3.14" upper="3.14" velocity="0.5"/>
		</joint>
		<link name="${leg_number}_tibia_link">
			<visual>
				<geometry>
					<mesh filename="${stl_path_visual}tibia_link.stl"/>
				</geometry>
				<origin rpy="0 0 0" xyz="0 0 0"/>
				<material name="grey">
					<color rgba="${color_grey}"/>
				</material>
			</visual>
			<inertial>
				<mass value="0.2"/>
				<inertia ixx="677.4596304896" ixy="9.6555e-09" ixz="1.5286087649999998e-07" iyy="604.3930722304" iyz="6.896018065999999e-07" izz="98.687483904" />
			</inertial>
			<collision>
				<geometry>
					<mesh filename="${stl_path_collision}tibia_link.stl"/>
				</geometry>
				<origin rpy="0 0 0" xyz="0 0 0"/>
			</collision>
		</link>


		<joint name="m${leg_number}3" type="revolute">
			<parent link="${leg_number}_femur_link"/>
			<child link="${leg_number}_tibia_link"/>
			<origin xyz="0.096 0.0 0.0" rpy="0 -1.57 0"/>
			<axis xyz="0 1 0"/>
			<limit effort="1000.0" lower="-3.14" upper="3.14" velocity="0.5"/>
		</joint>
		<link name="${leg_number}_foot_link" />
		<joint name="${leg_number}_foot_joint" type="fixed">
			<parent link="${leg_number}_tibia_link" />
			<child link="${leg_number}_foot_link" />
			<origin xyz="0 0.0 -0.162" rpy="0.0 0.0 0.0" />
		</joint>

	</xacro:macro>

</robot>